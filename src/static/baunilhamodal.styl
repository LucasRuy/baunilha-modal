.baunilha-modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0px);
    display: block;
    width: 50%;
    height: 50%;
    z-index: -9999;
    background-color: white;
    padding: 20px;
    visibility: hidden;
    opacity: 0;
    user-select: none;
    transition: all 200ms ease;

    &.is-active {
        z-index: 9999;
        visibility: visible;
        opacity: 1;
        user-select: inherit;
        &__overlay {
            z-index: 9998;
            visibility: visible;
            opacity: 1;
            user-select: inherit;
        }
    }
    &__overlay {
        position: fixed;
        top: 0px;
        left: 0px;
        display: block;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9998;
        visibility: hidden;
        opacity: 0;
        user-select: none;
        transition: all 200ms ease;
        &.is-active {
            z-index: 9998;
            visibility: visible;
            opacity: 1;
            user-select: inherit;
        }
    }
    &__close {
        position: absolute;
        top: 10px;
        right: 10px;
        border: 0px;
        background-color: black;
        color: white;
        font-weight: 700;
        font-size: 18px;
    }
    &__content {
        padding-top: 25px;
    }
}